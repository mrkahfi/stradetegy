{% extends 'JariffProjectBundle::base_admin.html.twig' %}

{% block breadcrumb_title %}Member #{{ member.number }}{% endblock %}

{% block breadcrumb_content %}
    <li>
        <i class="icon-home"></i>
        <a href="{{ path('dashboard_admin') }}">Dashboard</a>
        <span class="icon-angle-right"></span>
    </li>
    <li>
        <a href="{{ path('admin_lead_index') }}">Member Index</a>
        <span class="icon-angle-right"></span>
    </li>
    <li>
        <a href="{{ path('admin_member_profile_show', {'id' : member.id}) }}">Member #{{ member.number }} Profile</a>
        <span class="icon-angle-right"></span>
    </li>
    <li>
        Reset Password
    </li>
{% endblock %}

{% block content %}

{{ form_start(form) }}

<fieldset>
<div class="row-fluid">
    <div class="span12">
