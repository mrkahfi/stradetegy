{% extends 'JariffProjectBundle::base_admin.html.twig' %}

{% block breadcrumb_title %}Company {{ entity.name }}{% endblock %}

{% block breadcrumb_content %}
    <li>
        <i class="icon-home"></i>
        <a href="{{ path('dashboard_admin') }}">Dashboard</a>
        <span class="icon-angle-right"></span>
    </li>
    <li>
        Edit Company
    </li>
{% endblock %}

{% block content %}
{{ form_errors(form) }}
{{ form_start(form) }}
<fieldset>
<div class="row-fluid">
	<div class="span12">
		<div class="span6">
		    <div class="social-box">
				<div class="body">
					{{ form_row(form.billToName) }}
					{{ form_row(form.billToAdress) }}
					{{ form_row(form.billToEmail) }}
					{{ form_row(form.billToPhone) }}
					{{ form_row(form.invoiceType) }}
					{{ form_row(form.payment) }}
					{{ form_row(form.shipToName) }}
					{{ form_row(form.shipToAdress) }}
					{{ form_row(form.shipToEmail) }}
					{{ form_row(form.shipToPhone) }}
					{{ form_row(form.name) }}
					{{ form_row(form.accountManager) }}
					{{ form_row(form._token) }}
				</div>
			</div>
		</div>
    </div>
</div>
<button type="submit" class="btn btn-primary">Save</button>
</fieldset>
</form>

{% endblock %}
