{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Company list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Billtoname</th>
                <th>Billtoadress</th>
                <th>Billtoemail</th>
                <th>Billtophone</th>
                <th>Datecreate</th>
                <th>Invoicetype</th>
                <th>Payment</th>
                <th>Shiptoname</th>
                <th>Shiptoadress</th>
                <th>Shiptoemail</th>
                <th>Shiptophone</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('company_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.billToName }}</td>
                <td>{{ entity.billToAdress }}</td>
                <td>{{ entity.billToEmail }}</td>
                <td>{{ entity.billToPhone }}</td>
                <td>{% if entity.dateCreate %}{{ entity.dateCreate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.invoiceType }}</td>
                <td>{{ entity.payment }}</td>
                <td>{{ entity.shipToName }}</td>
                <td>{{ entity.shipToAdress }}</td>
                <td>{{ entity.shipToEmail }}</td>
                <td>{{ entity.shipToPhone }}</td>
                <td>{{ entity.name }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('company_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('company_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('company_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
