            <div class="social-box">
                <div class="body">
                    {{ form_row(form.password) }}
                </div>
            </div>
        </div>
    </div>
</div>

{{ form_row(form._token) }}
<button type="submit" class="btn btn-primary">Save</button>
</fieldset>
</form>

{% endblock %}

