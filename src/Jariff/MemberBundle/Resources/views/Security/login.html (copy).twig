  <style type="text/css">
  body {
    padding-top: 40px;
    padding-bottom: 40px;
    background-color: #e9eaed;
  }

.topmenu {
    -webkit-box-shadow: #333 0px 0px 10px;
    -moz-box-shadow: #333 0px 0px 10px;
    box-shadow: #333 0px 0px 10px;
    height: 30px;
    padding: 4px;
    background: #3A454B;
    color: #c1c1c1;
    position: fixed;
    z-index: 1000;
    width: 100%;
    top: 0px;
}

.tile {
    clear: both;
    margin: auto;
    position: relative;
    text-align: left;
    width: 950px;
    font-weight: 800;
    color: #fff;
    font-size: 14px;

}

.callus {
    color: #FFFFFF;
    display: block;
    float: left;
    font-size: 16px;
    font-weight: bold;
    left: 0;
    line-height: 16px;
    position: relative;
    top: 0;
}
.language {
    display: block;
    float: left;
    position: absolute;
    right: 0;
}

ul.lang_block {
    display:block;
overflow: hidden;
margin: 0 auto 0;
width: 100%;
text-align: center;

list-style: none;
}
ul.lang_block li {
display: inline-block;
margin: 0 3px 0 3px;
list-style: none;
