{% extends 'JariffProjectBundle::base_admin2.html.twig' %}

{% block breadcrumb_title %}Inbound #{{ inbound.id }}{% endblock %}

{% block breadcrumb_content %}
    <li>
        <i class="icon-home"></i>
        <a href="{{ path('dashboard_admin') }}">Dashboard</a>
        <span class="icon-angle-right"></span>
    </li>
    <li>
        <a href="{{ path('admin_inbound_index') }}">Inbound Index</a>
        <span class="icon-angle-right"></span>
    </li>
    <li>
        Inbound #{{ inbound.id }}
    </li>
{% endblock %}

{% block content %}


<div>
    {% if inbound.flag is not null %}
    <img src="/bundles/jariffproject/admin/img/icons/flag/{{ inbound.flag }}.png">
    {% endif %}
    <a class="btn {% if inbound.lead is not null %}disabled{% endif %}" href="{{ path('admin_inbound_attach', { 'id' : inbound.id }) }}">Attach to Lead</a>
    <a class="btn {% if inbound.lead is not null %}disabled{% endif %}" href="{{ path('admin_inbound_convert', { 'id' : inbound.id }) }}">Convert to Lead</a>
    <a class="btn {% if inbound.member is not null %}disabled{% endif %}" href="{{ path('admin_inbound_previous_client', { 'id' : inbound.id }) }}">Previous Client</a>
    <a class="btn" href="{{ path('admin_inbound_attach', { 'id' : inbound.id }) }}">Forward</a>
    <a class="btn" href="{{ path('admin_inbound_check_flag', { 'id' : inbound.id }) }}">Check Flag</a>
    <div class="btn-group">
        <button class="btn btn-info dropdown-toggle" data-toggle="dropdown">Quick Response <span class="caret"></span></button>
        <ul class="dropdown-menu">
            <li><a href="{{ path('admin_inbound_quick_answer', {'id' : inbound.id, 'message' : 'wrong-number'}) }}">Wrong Number</a></li>
            <li><a href="{{ path('admin_inbound_quick_answer', {'id' : inbound.id, 'message' : 'freight-forwarder'}) }}">Freight Forwarder</a></li>
            <li><a href="{{ path('admin_inbound_quick_answer', {'id' : inbound.id, 'message' : 'foreign-suppliers'}) }}">Foreign Suppliers</a></li>
        </ul>
    </div>
    <div class="btn-group">
        <button class="btn btn-info dropdown-toggle" data-toggle="dropdown">Status <span class="caret"></span></button>
        <ul class="dropdown-menu">
            <li><a href="{{ path('admin_inbound_queue', { 'id' : inbound.id, 'queue' : 'sales' }) }}">Qualified</a></li>
            <li><a href="{{ path('admin_inbound_status', {'id' : inbound.id, 'status' : 'unqualified'}) }}">Unqualified/Spam</a></li>
        </ul>
    </div>
    <div class="btn-group">
        <button class="btn btn-info dropdown-toggle" data-toggle="dropdown">Queue <span class="caret"></span></button>
        <ul class="dropdown-menu">
            <li><a href="{{ path('admin_inbound_queue', {'id' : inbound.id, 'queue' : 'sales'}) }}">Sales</a></li>
            <li><a href="{{ path('admin_inbound_queue', {'id' : inbound.id, 'queue' : 'billing'}) }}">Billing</a></li>
            <li><a href="{{ path('admin_inbound_queue', {'id' : inbound.id, 'queue' : 'cs'}) }}">CS</a></li>
        </ul>
    </div>
</div>


<br/>
<br/>

<div class="row-fluid">
    <div class="span12">
        <div class="span6">
            <div class="social-box">
                <div class="body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id :</th>
                                <td>{{ inbound.id }}</td>
                            </tr>
                            <tr>
                                <th>Email :</th>
                                <td>{{ inbound.email }}</td>
                            </tr>
                            <tr>
                                <th>Name :</th>
                                <td>{{ inbound.name }}</td>
                            </tr>
                            <tr>
                                <th>Phone :</th>
                                <td>{{ inbound.phone }}</td>
                            </tr>
                            <tr>
                                <th>Business :</th>
                                <td>{{ inbound.business }}</td>
                            </tr>
                            <tr>
                                <th>Country :</th>
                                <td>{{ inbound.country }}</td>
                            </tr>
                            <tr>
                                <th>Date Create :</th>
                                <td>{{ inbound.dateCreate | date('Y-m-d H:i:s') }}</td>
                            </tr>
                            <tr>
                                <th>Date Finish :</th>
                                <td>{{ inbound.dateFinish | date('Y-m-d H:i:s') }}</td>
                            </tr>
                            <tr>
                                <th>Date Update :</th>
                                <td>{{ inbound.dateUpdate | date('Y-m-d H:i:s') }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="span6">
            <div class="social-box">
                <div class="body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Description :</th>
                                <td>{{ inbound.description | raw }}</td>
                            </tr>
                            <tr>
                                <th>Flag :</th>
                                <td>{{ inbound.flag }}</td>
                            </tr>
                            <tr>
                                <th>Ip Address :</th>
                                <td>{{ inbound.ipAddress }}</td>
                            </tr>
                            <tr>
                                <th>Lead :</th>
                                <td>{% if inbound.lead is not null %}{{ inbound.lead.number }}{% else %}---{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Queue :</th>
                                <td>{{ inbound.queue }}</td>
                            </tr>
                            <tr>
                                <th>Source :</th>
                                <td>{{ inbound.source }}</td>
                            </tr>
                            <tr>
                                <th>Time Lapsed :</th>
                                <td>{{ inbound.timeLapsed }}</td>
                            </tr>
                            <tr>
                                <th>Visited Page :</th>
                                <td>{{ inbound.visitedPage | raw }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}