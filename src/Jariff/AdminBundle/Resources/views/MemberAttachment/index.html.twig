{% extends '::base.html.twig' %}

{% block body -%}
    <h1>MemberAttachment list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category</th>
                <th>Datecreate</th>
                <th>Result</th>
                <th>Title</th>
                <th>Type</th>
                <th>Attachment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('attachment_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.category }}</td>
                <td>{% if entity.dateCreate %}{{ entity.dateCreate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.result }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.attachment }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('attachment_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('attachment_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('attachment_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
