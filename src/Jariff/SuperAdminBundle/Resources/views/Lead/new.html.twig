                &lt;/div&gt;
            &lt;/div&gt;
        &lt;/div&gt;
    &lt;/div&gt;
&lt;/div&gt;

"></div>

<div class="row-fluid">
    <div class="span12">
        {# {{ form_end(form) }} #}
        {{ form_row(form._token) }}
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</div>

</fieldset>
</form>

{% endblock %}

