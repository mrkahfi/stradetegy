{% extends 'JariffProjectBundle::base_right_sidebar.html.twig' %}

{% block content %}
<div class="entry">
	<h3>{{ (inbound.description|split('<br>Message :'))[0] }}</h3>

	<aside id="comments">
		<ol class="commentlist">
			<li>
				<div class="comment-body">
					<div class="comment-authorinfo">
						
						<abbr class="published fr" title="By {{ inbound.dateCreate|date('M d, Y h:m') }} ">By {{ inbound.dateCreate|date('M d, Y h:m') }}</abbr>
						<h5>{{ app.user.profile.firstName }}</h5>
					</div>
					<div class="comment-content">
						{{ (inbound.description|split('<br>Message :'))[1] }}
						<div class="cl"></div>
					</div>
					<div class="cl"></div>
				</div>
			</li>
		</ol>
	</aside>
	<div class="cmsms-form-builder">
		<div class="box success_box" style="display:none;">
			<table>
				<tr>
					<td>&nbsp;</td>
					<td>Thank You!<br>Your message has been sent successfully.</td>
				</tr>
			</table>
		</div>
		{% for label, flashes in app.session.flashbag.all %}
		{% for flash in flashes %}
		<div class="alert alert-{{ label }}">
			{{ flash }}
		</div>
		{% endfor %}
		{% endfor %}
		<form action="{{ path('support_reply') }}" method="post" {{ form_enctype(form) }} id="support_form">
			<div class="form_info cmsms_input">
				{{ form_row(form.message, { 'attr': {'oninvalid': "setCustomValidity('Please give me a nice message')"} }) }}
			</div>
			<div>
				<input href="" class="button" type="submit" value="Send Reply" id="support_form_formsend" tabindex="8"></input>
				<div class="loading"></div>
			</div>
		</form>
	</div>
</div>
{% endblock %}
