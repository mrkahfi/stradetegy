                                if (res.success) {


                                    $('.j-content-result-'+'{{ form.vars.value.category }}').children(".col-md-3").children(".j-form-country-"+'{{ form.vars.value.category }}').html(res.html_string);

                                    


                                }
                            }
                        })

                                    }else{
