{% extends '::base.html.twig' %}

{% block body -%}
    <h1>LeadContact list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Country</th>
                <th>Datecreate</th>
                <th>Dateupdate</th>
                <th>Dontcall</th>
                <th>Dontemail</th>
                <th>Decisionmaker</th>
                <th>Email</th>
                <th>Facebook</th>
                <th>Firstname</th>
                <th>Ip</th>
                <th>Jobtitle</th>
                <th>Language</th>
                <th>Lastname</th>
                <th>Linkedin</th>
                <th>Paypal</th>
                <th>Phone</th>
                <th>Skype</th>
                <th>Street</th>
                <th>City</th>
                <th>Twitter</th>
                <th>Website</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('contact_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.country }}</td>
                <td>{% if entity.dateCreate %}{{ entity.dateCreate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateUpdate %}{{ entity.dateUpdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.dontCall }}</td>
                <td>{{ entity.dontEmail }}</td>
                <td>{{ entity.decisionMaker }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.facebook }}</td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.ip }}</td>
                <td>{{ entity.jobTitle }}</td>
                <td>{{ entity.language }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{{ entity.linkedin }}</td>
                <td>{{ entity.paypal }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.skype }}</td>
                <td>{{ entity.street }}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.twitter }}</td>
                <td>{{ entity.website }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('contact_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('contact_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('contact_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
