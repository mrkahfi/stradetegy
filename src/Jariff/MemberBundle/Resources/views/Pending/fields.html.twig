
{% block form_row -%}
{% spaceless %}
        {{ form_label(form) }} : 
            {{ form_errors(form) }}
            {{ form_widget(form) }}
            {% for attrname, attrvalue in attr %}
                {% if attrname in ['help'] %}
                    <p class="help-block">{{ attrvalue|raw }}</p>
                {% endif %}
            {% endfor %}
{% endspaceless %}
{% endblock form_row -%}

{% block form_label %}
{% spaceless %}
    {% if not compound %}
        {% set label_attr = label_attr|merge({'for': id}) %}
    {% endif %}
    {% if required %}
        {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
    {% endif %}
    {% if label is empty %}
        {% set label = name|humanize %}
    {% endif %}
    {{ label|trans({}, translation_domain) }}
{% endspaceless %}
{% endblock form_label %}

