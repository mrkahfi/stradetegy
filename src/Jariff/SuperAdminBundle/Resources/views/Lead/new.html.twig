{% extends 'JariffProjectBundle::base_admin.html.twig' %}

{% block breadcrumb_title %}Lead #{{ entity.number }}{% endblock %}

{% block breadcrumb_content %}
    <li>
        <i class="icon-home"></i>
        <a href="{{ path('dashboard_admin') }}">Dashboard</a>
        <span class="icon-angle-right"></span>
    </li>
    <li>
        <a href="{{ path('admin_lead_index') }}">Lead Index</a>
        <span class="icon-angle-right"></span>
    </li>
    <li>
        {% if entity.id %}
          <a href="{{ path('admin_lead_show', {'id' : entity.id}) }}">Lead #{{ entity.number }}</a>
        {% else %}
          New lead
        {% endif %}
    </li>
{% endblock %}

{% block content %}
		    
{{ form_start(form) }}
<fieldset>
<div class="row-fluid">
    <div class="span12">
        <div class="span3">
            <div class="social-box">
                <div class="body">
                  {{ form_row(form.business) }}
                  {{ form_row(form.businessType) }}
                  {{ form_row(form.businessTypeOther) }}
                  {{ form_row(form.campaign) }}
                </div>
            </div>
        </div>
        <div class="span3">
            <div class="social-box">
                <div class="body">
                    {{ form_row(form.competitor) }}
                    {{ form_row(form.competitorOther) }}
                    {{ form_row(form.competitorStatus) }}
                    <div class="input-append datetimepicker">
                        {{ form_label(form.competitorDateEnd) }}
                        {{ form_widget(form.competitorDateEnd) }}
                        <span class="add-on">
                            <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
                        </span>
                    </div>
                    <div class="input-append datetimepicker">
                        {{ form_label(form.dateReady) }}
                        {{ form_widget(form.dateReady) }}
                        <span class="add-on">
                            <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="span3">
            <div class="social-box">
                <div class="body">
                    {{ form_row(form.product) }}
                    {{ form_row(form.description) }}
                    {{ form_row(form.notes) }}
                </div>
            </div>
        </div>
        <div class="span3">
            <div class="social-box">
                <div class="body">
                    {{ form_row(form.owner) }}
                    {{ form_row(form.source) }}
                	{{ form_row(form.sourceOther) }}
                    {{ form_row(form.stage) }}
                	{{ form_row(form.stageReason) }}
                    {{ form_row(form.flag) }}
                    <label for="lead_dataInterest">Data Interest</label>
                    <div class="row-fluid" id="dataInterest" data-prototype="
                    {{ form_row(form.dataInterest.vars.prototype.dataInterest)|e }}
                    {{ form_row(form.dataInterest.vars.prototype.dataInterestOther)|e }}
                    ">
                    {% for dataInterest in form.dataInterest %}
                          {{ form_widget(dataInterest.dataInterest) }}
                    {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row-fluid" id="sales" data-prototype="
            &lt;h3&gt;Add Sales&lt;/h3&gt;
            &lt;div class=&quot;span3&quot;&gt;
                &lt;div class=&quot;social-box&quot;&gt;
                    &lt;div class=&quot;body&quot;&gt;
                        {{ form_row(form.sales.vars.prototype.sales)|e }}
                        {{ form_row(form.sales.vars.prototype.primary)|e }}
                    &lt;/div&gt;
                &lt;/div&gt;
            &lt;/div&gt;
">
    <div class="span12">
        {% for sales in form.sales %}
            <div class="span3">
                <div class="social-box">
                    <div class="body">
                          {{ form_row(sales.sales) }}
                          {{ form_row(sales.primary) }}
                    </div>
                </div>
            </div>
        {% endfor %}  
    </div>
</div>

        

<br/>





{% for contact in form.contact %}

<h3>Contact #{{ loop.index }}</h3>
<div class="row-fluid">
    <div class="span12">
        <div class="span3">
            <div class="social-box">
                <div class="body">
                    {{ form_row(contact.salutation) }}
                    {{ form_row(contact.firstName) }}
                    {{ form_row(contact.lastName) }}
                    {{ form_row(contact.password) }}
                    {{ form_row(contact.callTime) }}
                    {{ form_row(contact.dontCall) }}
                    {{ form_row(contact.dontEmail) }}
                </div>
            </div>
        </div>
        <div class="span3">
            <div class="social-box">
                <div class="body">
                    {{ form_row(contact.language) }}
                    {{ form_row(contact.email) }}
                    {{ form_row(contact.phone) }}
                    {{ form_row(contact.skype) }}
                    {{ form_row(contact.jobTitle) }}
                    {{ form_row(contact.decisionMaker) }}
                </div>
            </div>
        </div>
        <div class="span3">
            <div class="social-box">
                <div class="body">
                    {{ form_row(contact.paypal) }}
                    {{ form_row(contact.facebook) }}
                    {{ form_row(contact.linkedin) }}
                    {{ form_row(contact.twitter) }}
                    {{ form_row(contact.website) }}
                    {{ form_row(contact.ip) }}
                </div>
            </div>
        </div>
        <div class="span3">
            <div class="social-box">
