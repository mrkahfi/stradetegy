    <body>
      <!-- BEGIN FORMS CONTAINER -->


<div class="topmenu">
    <div class="tile">
        <div class="callus">+1 622 716 78678</div>
        <div class="language">
            <ul class="lang_block">
                <li>
                    <a href="{{ path('change_locale', { '_locale' : 'en'}) }}">
                        <img alt="English" src="{{ asset('/bundles/jariffproject/frontend/images/flags-iso/shiny/32/US.png') }}" title="English">
                    </a>
                </li>
                <li>
                    <a href="{{ path('change_locale', { '_locale' : 'es'}) }}">
                        <img alt="Spanish" src="{{ asset('/bundles/jariffproject/frontend/images/flags-iso/shiny/32/ES.png') }}" title="Spanish">
                    </a>
                </li>
                <li>
                    <a href="{{ path('change_locale', { '_locale' : 'fr'}) }}">
                        <img alt="French" src="{{ asset('/bundles/jariffproject/frontend/images/flags-iso/shiny/32/FR.png') }}" title="French">
                    </a>
                </li>
                <li>
                    <a href="{{ path('change_locale', { '_locale' : 'cn'}) }}">
                        <img alt="Chinese" src="{{ asset('/bundles/jariffproject/frontend/images/flags-iso/shiny/32/CN.png') }}" title="Chinese">
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>



      <div class="container">
        <!-- BEGIN LOGIN FORM -->
            {% if error %}
                <div class="box error_box" style="width:100%;color:red;text-align:center;">
                    <p>{% trans %}Login failed{% endtrans %}</p>
                    <p>{{ error.message }}</p>
                </div>
            {% endif %}
        <form class="form-login" method="post" action="{{ path('member_login_check') }}">
          <h2 class="form-heading">{% trans %}Please log in{% endtrans %}</h2>

        <input type="text" class="input-block-level" placeholder="Email address" autofocus="" id="username" placeholder="username" name="_username" value="{{ last_username }}"/>
                    <input class="input-block-level" type="password" id="password" placeholder="password" name="_password"/>

          <div class="row-fluid">
            <label class="checkbox span6">
              <input type="checkbox" value="remember-me"> {% trans %}Remember me{% endtrans %}
            </label>
            <button class="btn btn-primary pull-right span6" type="submit">{% trans %}Log in{% endtrans %}</button>
          </div>
          <div class="forget-password">
            <p class="text-center">{% trans %}Forgot password?{% endtrans %} <a href="#" id="link-forgot">{% trans %}Click here to reset{% endtrans %}</a></p>
          </div>
          <div class="row-fluid">
            <a href="{{ path('signup') }}" id="btn-register" class="btn btn-success pull-right span12">{% trans %}Register{% endtrans %}</a>
          </div>
          <br/>
          <div class="row-fluid">
            <a href="{{ path('dashboard') }}" id="btn-register" class="btn pull-right span12">{% trans %}Back to front{% endtrans %}</a>
          </div>
        </form>
        <!-- END LOGIN FORM -->

        <!-- BEGIN FORGOT PASSWORD FORM -->
        <form class="form-forgot hide" method="post" action="{{ path('member_password_reset') }}">
          <h2 class="form-heading">{% trans %}Forgot password{% endtrans %}</h2>

          <p>{% trans %}Enter your email address to reset your password{% endtrans %}</p>

          <div class="input-prepend input-fullwidth">
            <span class="add-on"><i class="icon-envelope-alt"></i></span>
            <div class="input-wrapper">
              <input type="text" name="email" placeholder="Email"/>
            </div>
          </div>

          <div class="form-actions">
            <button class="btn btn-primary btn-back" type="button"><i class="icon-angle-left"></i> {% trans %}Back{% endtrans %}</button>
            <button class="btn btn-success pull-right" type="submit">{% trans %}Send{% endtrans %}</button>
          </div>
        </form>
        <!-- END FORGOT PASSWORD FORM -->
        <!-- BEGIN FOOTER -->
        <div class="form-footer-copyright">
          2010 - {{ 'now' | date('Y') }} Â© <small>sTRADEtegy</small>
        </div>
        <!-- END FOOTER -->
      </div>
      <!-- END FORMS CONTAINER -->

      <!-- BEGIN SIDEBAR PANEL -->
      <div style="display: none;">
        <ul class="rightPanel">
          <li><a href="pages/basic-user-profile.html"><i class="icon-user"></i><span>My Profile</span></a></li>
          <li><a href="pages/chat-inbox.html"><i class="icon-envelope"></i><span>Messages</span></a></li>
          <li><a href="#"><i class="icon-tasks"></i><span>Taks</span></a></li>
        </ul>
      </div>
      <!-- END SIDEBAR PANEL -->

      <!-- BEGIN JAVASCRIPT CODES -->
