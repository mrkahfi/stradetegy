    <body>
      <!-- BEGIN FORMS CONTAINER -->
      <div class="container">
        <!-- BEGIN LOGIN FORM -->
            {% if error %}
                <div class="notices">
                    <div class="bg-color-red">
                        <a href="#" class="close"></a>
                        <div class="notice-icon"><img src="/bundles/jariffadmin/shield-user.png"></div>
                        <div class="notice-image"><img src="/bundles/jariffadmin/armor.png"></div>
                        <div class="notice-header fg-color-yellow">Login failed</div>
                        <div class="notice-text">{{ error.message }}</div>
                    </div>
                </div>
            {% endif %}
        <form class="form-login" method="post" action="{{ path('admin_login_check') }}">
          <h2 class="form-heading">Please log in</h2>

        <input type="text" class="input-block-level" placeholder="Email address" autofocus="" id="username" placeholder="username" name="_username" value="{{ last_username }}"/>
                    <input class="input-block-level" type="password" id="password" placeholder="password" name="_password"/>

          <div class="row-fluid">
            <label class="checkbox span6">
              <input type="checkbox" value="remember-me"> Remember me
            </label>
            <button class="btn btn-primary pull-right span6" type="submit">Log in</button>
          </div>
          <div class="forget-password">
            <p class="text-center">Forgot password? <a href="#" id="link-forgot">Click here to reset</a></p>
          </div>
          <div class="row-fluid">
            <button id="btn-register" class="btn btn-success pull-right span12" type="button">Register</button>
          </div>
        </form>
        <!-- END LOGIN FORM -->
        <!-- BEGIN REGISTER FORM -->
        <form class="form-register hide" method="get" action="http://cesarlab.lc/templates/social/demo/dashboard.html">
          <h2 class="form-heading">Register</h2>

          <div class="alert alert-info hide">
            We sent you an <strong>activation link</strong> to your email
          </div>

          <div id="register-container">
            <p class="text-center">Who are you?</p>
            <div class="input-prepend input-fullwidth">
              <span class="add-on"><i class="icon-user"></i></span>
              <div class="input-wrapper">
                <input type="text" placeholder="Username"/>
              </div>
            </div>
            <div class="input-prepend input-fullwidth">
              <span class="add-on"><i class="icon-envelope-alt"></i></span>
              <div class="input-wrapper">
                <input type="text" placeholder="Email"/>
              </div>
            </div>
            <div class="input-prepend input-fullwidth">
              <span class="add-on"><i class="icon-lock"></i></span>
              <div class="input-wrapper">
                <input type="text" placeholder="Password"/>
              </div>
            </div>
            <div class="input-prepend input-fullwidth">
              <span class="add-on"><i class="icon-ok-sign"></i></span>
              <div class="input-wrapper">
                <input type="text" placeholder="Repeat Password"/>
              </div>
            </div>
          </div>
          <div class="form-actions">
            <button class="btn btn-primary btn-back" type="button"><i class="icon-angle-left"></i> Back</button>
            <button class="btn btn-success pull-right" type="button" id="btn-register-user">Register</button>
          </div>


        </form>
        <!-- END REGISTER FORM -->
        <!-- BEGIN FORGOT PASSWORD FORM -->
        <form class="form-forgot hide" method="get" action="http://cesarlab.lc/templates/social/demo/dashboard.html">
          <h2 class="form-heading">Forgot password</h2>

          <p>Enter your email address to reset your password</p>

          <div class="input-prepend input-fullwidth">
            <span class="add-on"><i class="icon-envelope-alt"></i></span>
            <div class="input-wrapper">
              <input type="text" placeholder="Email"/>
            </div>
          </div>

          <div class="form-actions">
            <button class="btn btn-primary btn-back" type="button"><i class="icon-angle-left"></i> Back</button>
            <button class="btn btn-success pull-right" type="button">Send</button>
          </div>
        </form>
        <!-- END FORGOT PASSWORD FORM -->
        <!-- BEGIN FOOTER -->
        <div class="form-footer-copyright">
          2013 Â© <small>Social - Premium Responsive Admin Template</small>
        </div>
        <!-- END FOOTER -->
      </div>
      <!-- END FORMS CONTAINER -->

      <!-- BEGIN SIDEBAR PANEL -->
      <div style="display: none;">
        <ul class="rightPanel">
          <li><a href="pages/basic-user-profile.html"><i class="icon-user"></i><span>My Profile</span></a></li>
          <li><a href="pages/chat-inbox.html"><i class="icon-envelope"></i><span>Messages</span></a></li>
